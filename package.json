{
  "name": "hisui-alpha",
  "version": "0.2.2",
  "author": "adenohitu",
  "description": "Useful tool for programming competition",
  "homepage": ".",
  "main": "build/src_main/main.js",
  "private": true,
  "scripts": {
    "start": "concurrently \"set BROWSER=none && yarn react:start\" \"wait-on http://localhost:3000 && tsc -p src_main -w\" \"wait-on http://localhost:3000 && tsc -p src_main && electron .\"",
    "lint": "yarn react:lint && yarn electron:lint",
    "test": "yarn react:test && yarn electron:test",
    "build:mac": "yarn react:build && tsc -p src_main --removeComments true && electron-builder --mac --universal",
    "build:win": "yarn react:build && tsc -p src_main --removeComments true && electron-builder --win --x64",
    "electron:source_build": "tsc -p src_main --removeComments true",
    "electron:test": "jest",
    "electron:lint": "yarn eslint --max-warnings 0 src_main/",
    "react:start": "webpack-dev-server --config ./webpack/webpack.dev.js --port 3000",
    "react:build": "webpack --config ./webpack/webpack.prod.js",
    "react:lint": "yarn eslint --max-warnings 0 src/",
    "react:test": "set TZ=JST && jest ./src",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none yarn react:start\" \"wait-on http://localhost:3000 && tsc -p src_main -w\" \"wait-on http://localhost:3000 && tsc -p src_main && electron .\"",
    "docs": " ./node_modules/.bin/typedoc src_main --hideGenerator --tsconfig src_main/tsconfig.json --out ./apidocs"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "adenohitu",
      "repo": "hisui"
    },
    "productName": "Hisui",
    "artifactName": "Hisui-${version}-${os}.${ext}",
    "copyright": "Copyright Â© 2020-2021 Adenohitu",
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/logo512.png",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/logo512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "@clangd/install": "^0.1.4",
    "axios": "^0.21.1",
    "concurrently": "^6.0.0",
    "dayjs": "^1.10.3",
    "electron-devtools-installer": "^3.1.1",
    "electron-log": "^4.3.5",
    "electron-reload": "^1.5.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.8",
    "jsdom": "^18.0.0",
    "node-cache": "^5.1.2",
    "portfinder": "^1.0.28",
    "typescript": "4.3.5",
    "vscode-ws-jsonrpc": "^0.2.0",
    "wait-on": "^5.2.1",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@codingame/monaco-jsonrpc": "^0.3.1",
    "@codingame/monaco-languageclient": "^0.14.0",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fontsource/roboto": "^4.5.0",
    "@monaco-editor/react": "^4.0.10",
    "@mui/icons-material": "^5.0.1",
    "@mui/material": "^5.0.1",
    "@mui/styles": "^5.0.1",
    "@reduxjs/toolkit": "^1.5.0",
    "@types/classnames": "^2.2.11",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "26.0.23",
    "@types/jsdom": "^16.2.13",
    "@types/lodash": "^4.14.168",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/node": "16.11.6",
    "@types/react": "17.0.13",
    "@types/react-dom": "17.0.8",
    "@types/react-grid-layout": "^1.1.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.6",
    "@types/ws": "^8.2.0",
    "bootstrap": "5.1.3",
    "copy-webpack-plugin": "^6.3.2",
    "css-loader": "^5.2.7",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "26.6.0",
    "jsonc-parser": "^3.0.0",
    "mathjs": "^9.4.1",
    "mini-css-extract-plugin": "^2.4.3",
    "monaco-editor": "0.28.1",
    "react": "^17.0.1",
    "react-bootstrap": "^2.0.1",
    "react-dom": "^17.0.1",
    "react-grid-layout": "^1.2.4",
    "react-mosaic-component": "^5.0.0",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "recharts": "^2.0.9",
    "reconnecting-websocket": "^4.4.0",
    "sass": "^1.43.3",
    "sass-loader": "^12.2.0",
    "seedrandom": "^3.0.5",
    "source-map-loader": "^3.0.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.3.0",
    "ts-loader": "^7.0.5",
    "typedoc": "^0.21.2",
    "vscode-json-languageservice": "^4.0.2",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-types": "^3.16.0",
    "vscode-uri": "^3.0.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "resolutions": {
    "vscode-languageserver-types": "3.16.0",
    "@types/node": "16.11.6"
  }
}
